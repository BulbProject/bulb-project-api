{
  "name": "bulb-broject-api",
  "version": "0.0.1",
  "description": "API Service for Bulb Project",
  "main": "build/app/index.js",
  "author": "uStudio Front-end Department",
  "repository": "https://github.com/BulbProject/bulb-project-api.git",
  "scripts": {
    "dev": "cross-env NODE_PATH=./src NODE_ENV=development nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "yarn clear && tsc --diagnostics && renamer --find src --replace app ./build/*",
    "start": "yarn build && cross-env NODE_PATH=./build/app NODE_ENV=production node build/app/index.js",
    "clear": "rimraf build",
    "autofix": "eslint --fix --quiet -c .eslintrc.json --ext .ts src/",
    "autoformat": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/mongoose": "^5.7.7",
    "@types/node": "^13.9.1",
    "@types/yup": "^0.26.33",
    "cross-env": "^7.0.2",
    "dayjs": "^1.8.23",
    "dotenv": "^8.2.0",
    "fastify": "^2.13.0",
    "fastify-swagger": "^2.5.0",
    "mongoose": "^5.9.6",
    "renamer": "^1.1.4",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3",
    "yup": "^0.28.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "ts4ocds": "^1.0.0-beta.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn autofix",
      "yarn autoformat",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engineStrict": true,
  "engines": {
    "node": "12.16.1"
  },
  "license": "MIT"
}
