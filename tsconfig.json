{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "build",
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "**/*.test.ts", "**/*.spec.ts"]
}
