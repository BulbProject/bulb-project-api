{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "build",
    "baseUrl": "src",
    "paths": {
      "config": ["./config.ts"],
      "lib/*": ["./lib/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
